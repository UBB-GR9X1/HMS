@model HMS.Shared.DTOs.MedicalRecordDto

@{
    ViewData["Title"] = "Medical Record Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="MedicalHistory" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Medical History
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@(Model.CreatedAt?.ToString("MMMM dd, yyyy HH:mm") ?? "No date")</dd>

                <dt class="col-sm-3">Patient</dt>
                <dd class="col-sm-9">
                    @(ViewData["PatientName"] ?? "Unknown")
                </dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">
                    @(ViewData["DoctorName"] ?? "Unknown")
                    @if (!string.IsNullOrEmpty((string)ViewData["DoctorDepartment"]))
                    {
                        <small class="text-muted">(@ViewData["DoctorDepartment"] Department)</small>
                    }
                </dd>

                <dt class="col-sm-3">Procedure</dt>
                <dd class="col-sm-9">
                    @(ViewData["ProcedureName"] ?? "Unknown")
                    @if (!string.IsNullOrEmpty((string)ViewData["ProcedureDepartment"]))
                    {
                        <small class="text-muted">(@ViewData["ProcedureDepartment"] Department)</small>
                    }
                </dd>

                <dt class="col-sm-3">Diagnosis</dt>
                <dd class="col-sm-9">@Model.Diagnosis</dd>
            </dl>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 