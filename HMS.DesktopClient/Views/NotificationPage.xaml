<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="HMS.DesktopClient.Views.NotificationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HMS.DesktopClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:HMS.Shared.Entities"
    mc:Ignorable="d"
    Title="NotificationPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Your Notifications" 
                   FontSize="20" 
                   Margin="0,0,0,10"/>

        <ListView Grid.Row="1" 
          ItemsSource="{x:Bind _notification_view_model.notificationsCollection, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="entities:Notification">
                    <Grid Margin="0,5,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID: " Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind Id}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Date: " Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind DeliveryDateTime}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Message: " Margin="0,0,5,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind Message}" TextWrapping="Wrap"/>

                        <Button Content="Delete" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="250,0,0,0" Click="deleteButtonClick" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
