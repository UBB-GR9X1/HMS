<Page
    x:Class="HMS.DesktopClient.Views.MedicalRecordsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:fonticon="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:HMS.DesktopClient.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="#FAFAFA">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hospital Red Accent Bar -->
        <Border Grid.Row="0" Height="8" Background="#D32F2F" CornerRadius="0,0,8,8" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <!-- Title -->
        <TextBlock
            Text="Medical Records"
            FontSize="32"
            FontWeight="Bold"
            Margin="0,24,0,24"
            HorizontalAlignment="Center"
            Foreground="#B71C1C"
            Grid.Row="0"
            VerticalAlignment="Bottom"/>

        <!-- Card Container -->
        <Border
            Grid.Row="1"
            HorizontalAlignment="Center"
            Width="1100"
            Padding="0,24"
            Background="White"
            CornerRadius="16"
            BorderBrush="#FFCDD2"
            BorderThickness="1"
            Margin="0,0,0,24">
            <StackPanel>
                <controls:DataGrid
                        x:Name="RecordsGrid"
                        RequestedTheme="Light"
                        ItemsSource="{Binding MedicalRecords}"
                        AutoGenerateColumns="False"
                        SelectionMode="Single"
                        HeadersVisibility="Column"
                        GridLinesVisibility="None"
                        RowHeight="56"
                        ColumnHeaderHeight="48"
                        BorderThickness="0"
                        Background="White"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Foreground="#333"
                        >
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                        <controls:DataGridTextColumn Header="Patient ID" Binding="{Binding PatientId}" />
                        <controls:DataGridTextColumn Header="Procedure ID" Binding="{Binding ProcedureId}" />
                        <controls:DataGridTextColumn Header="Diagnosis" Binding="{Binding Diagnosis}" />
                        <controls:DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" />
                        <!-- Delete Icon Column -->
                        <controls:DataGridTemplateColumn Header="Delete" Width="80">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <FontIcon Glyph="&#xE74D;" Foreground="#D32F2F" FontSize="28"/>
                                    </Button>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </StackPanel>
        </Border>

        <!-- Add New Button -->
        <Border Grid.Row="2" Background="White" BorderBrush="#FFCDD2" BorderThickness="0,1,0,0" Padding="24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button
                    Content="Add new"
                    Width="200"
                    Height="44"
                    Margin="0,0,0,0"
                    Background="#D32F2F"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    CornerRadius="10"
                    FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
