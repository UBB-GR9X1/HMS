<Window
    x:Class="HMS.DesktopClient.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HMS.DesktopClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Register Patient">

    <Grid>
        <Image Source="D:\HMSFinal\HMS\HMS.DesktopClient\ViewResources\registerPage.png" Stretch="Fill"></Image>
            <!-- Centered Card -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="auto">
            <Border Background="LightGray" CornerRadius="10" Padding="0" >
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30" VerticalAlignment="Center" Spacing="0">
                        <!-- Heading -->
                        <TextBlock Text="REGISTER" FontSize="40" FontWeight="ExtraBlack" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                        <!-- Email -->
                        <TextBlock Text="Email:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="EmailBox" PlaceholderText="Email" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Password -->
                        <TextBlock Text="Password:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <PasswordBox x:Name="PasswordBox" PlaceholderText="Password" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Full Name -->
                        <TextBlock Text="Full Name:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="NameBox" PlaceholderText="Full Name" MaxLength="50" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- CNP -->
                        <TextBlock Text="CNP:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="CnpBox" PlaceholderText="CNP" MaxLength="13" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Phone Number -->
                        <TextBlock Text="Phone Number:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="PhoneNumberBox" PlaceholderText="Phone Number" MaxLength="10" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Blood Type -->
                        <TextBlock Text="Blood Type:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <ComboBox x:Name="BloodTypeBox" PlaceholderText="Blood Type" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black">
                                <ComboBoxItem Content="A+"/>
                                <ComboBoxItem Content="A-"/>
                                <ComboBoxItem Content="B+"/>
                                <ComboBoxItem Content="B-"/>
                                <ComboBoxItem Content="AB+"/>
                                <ComboBoxItem Content="AB-"/>
                                <ComboBoxItem Content="O+"/>
                                <ComboBoxItem Content="O-"/>
                            </ComboBox>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Emergency Contact -->
                        <TextBlock Text="Emergency Contact:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="EmergencyContactBox" PlaceholderText="Emergency Contact" MaxLength="10" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Allergies -->
                        <TextBlock Text="Allergies (optional):" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="AllergiesBox" PlaceholderText="Allergies (optional)" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Weight -->
                        <TextBlock Text="Weight (kg):" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="WeightBox" PlaceholderText="Weight (kg)" MaxLength="5" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Height -->
                        <TextBlock Text="Height (cm):" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="HeightBox" PlaceholderText="Height (cm)" MaxLength="5" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Birth Date -->
                        <TextBlock Text="Birth Date:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <DatePicker x:Name="BirthDatePicker" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Address -->
                        <TextBlock Text="Address:" FontWeight="Bold" FontSize="20" Margin="0,0,0,5" Foreground="Black"/>
                        <Border CornerRadius="5" Background="White" Margin="0,0,0,15">
                            <TextBox x:Name="AddressBox" PlaceholderText="Address" FontSize="14" Padding="15,4" BorderThickness="0" Background="White" Foreground="Black"/>
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                        </Border>

                        <!-- Error Message -->
                        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Margin="0,0,0,10" Visibility="Collapsed" FontWeight="Bold"/>

                        <!-- Register and Back Buttons on the same line -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,10,0,0">
                            <Button Content="BACK" Click="BackButton_Click"
                                Height="38" FontWeight="Bold" FontSize="16"
                                Background="White" Foreground="#222" BorderBrush="White"
                                Width="140">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="REGISTER" Click="RegisterButton_Click"
                                    Height="38" FontWeight="Bold" FontSize="16"
                                    Background="White" Foreground="#222" BorderBrush="White"
                                    Width="140">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
